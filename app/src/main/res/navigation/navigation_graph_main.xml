<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/fragmentMain">

    <fragment
        android:id="@+id/fragmentMain"
        android:name="com.example.todoapp.ui.fragments.MainFragment"
        android:label="FragmentMain"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_add_todo"
            app:destination="@id/fragmentAddTodo"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_edit_todo"
            app:destination="@id/fragmentEditTodo"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="todoId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/fragmentAddTodo"
        android:name="com.example.todoapp.ui.fragments.AddTodoFragment"
        android:label="FragmentAddTodo"
        tools:layout="@layout/fragment_todo"/>

    <fragment
        android:id="@+id/fragmentEditTodo"
        android:name="com.example.todoapp.ui.fragments.EditTodoFragment"
        android:label="FragmentEditTodo"
        tools:layout="@layout/fragment_todo">
        <argument
            android:name="todoId"
            app:argType="string" />
    </fragment>


</navigation>