<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_night</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_night</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_night</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/back_primary_night</item>
        <item name="statusBarScrim">@color/label_primary_night</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/support_separator_night</item>
        <item name="colorSecondary">@color/green_night</item>
        <item name="colorError">@color/red_night</item>
        <item name="colorOnErrorContainer">#A1FF3B30</item>
    </style>

    <style name="Switcher" parent="">
        ...
        <item name="colorOnSurface">@color/support_overlay_night</item>
        <item name="colorSecondary">@color/blue_night</item>
    </style>

    <style name="LargeTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/label_primary_night</item>
    </style>

    <style name="AppBarTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/label_primary_night</item>
    </style>

    <style name = "AppBarLayout" parent = "Widget.Design.AppBarLayout">
        <item name = "android:background">@color/back_primary_night</item>
    </style>

    <style name="TextViewRV">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="TextViewDone">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/label_tertiary_night</item>
    </style>

    <style name="CardView"> parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/back_secondary_night</item>
    </style>

    <style name="TextViewSmallRV">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/label_primary_night</item>
    </style>

    <style name="TextViewRCompleted">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/label_tertiary_night</item>
    </style>
    <style name="TextViewR">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/label_primary_night</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/label_primary_night</item>
        <item name="android:backgroundTint">@color/back_secondary_night</item>
        <item name="android:textColorHint">@color/label_tertiary_night</item>
    </style>
</resources>